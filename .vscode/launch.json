{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
            }
        },
        {
            "name": "Python: Scene Segmentation",
            "type": "python",
            "request": "launch",
            "module": "src.scene_segmentation.pipeline",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
} 